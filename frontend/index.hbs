  {{#each htmlWebpackPlugin.files.css}}
    <link rel="stylesheet" href="{{this}}" crossorigin="anonymous" integrity="{{{lookup @root.htmlWebpackPlugin.files.cssIntegrity @index}}}"/>
  {{/each}}
  <meta name="Description"
        CONTENT="Download your TripAdvisor Travelmap. You only need your Profile URL, one click and a second waiting time."/>
  <link rel="author" href="https://plus.google.com/+ChristianHaller1982"/>
  <title>Download Your TripAdvisor Travel Map üìç</title>
</head>
<body>

<div class="wrapper">
  <div class="form">
      <button class="expander" type="button"><img inline src="./frontend/svg/expand.svg"></button>
      <form action="{{htmlWebpackPlugin.options.endpoint}}">
    <fieldset>
<div class="flexcontainer">
        <input placeholder="https://tripadvisor.com/..." type="url" id="url" name="url" required />

      <button class="button" type="submit">submit</button>
</div>
    </fieldset>
          <fieldset class="cta">
              <p>Please enter your tripadvisor profile url</p>
              <div class="flexcontainer">
              <a class="button button--download" href="">Download<img inline src="./frontend/svg/download.svg" /></a>
              <button class="button button--googlemaps" type="button">Google Maps<img inline src="./frontend/svg/googlemaps.svg" /></button>
              </div>
          </fieldset>
  </form>
  </div>
    <div class="map">
        <div class="gmap"></div>
<img inline src="./frontend/svg/map.svg">

  </div>

</div>
{{#each htmlWebpackPlugin.files.js}}
<script src="{{this}}"
  integrity="{{{lookup @root.htmlWebpackPlugin.files.jsIntegrity @index}}}"
  crossorigin="anonymous"></script>
{{/each}}
</body>
